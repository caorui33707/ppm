.phoneno{
  position: absolute;
  top: 0.25rem;
  left: 2.2rem;
  width: 6rem;
  height: 0.8rem;
  border: none;
  font-size: 0.4rem;
}
.codeno{
  position: absolute;
  height: 0.8rem;
  top: 1.85rem;
  left: 2.2rem;
  width: 4rem;
  font-size: 0.4rem;
  border: none;
}
.get-code{
  position: absolute;
  height: 0.8rem;
  width: 2.5rem;
  font-size: 0.4rem;
  line-height: 0.8rem;
  right: 1rem;
  top: 1.88rem;
  color: #332e4e;
}
.login{
  width: 8.5rem;
  height: 1rem;
  font-size: 0.5rem;
  line-height: 1rem;
  position: absolute;
  top: 3.4rem;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  border: none;
  border-radius: 1rem;
  outline: none;
  color: #fff;
  background: #ff6a21;
}
.down-load{
  width: 8.5rem;
  height: 1rem;
  position: absolute;
  bottom: 1.2rem;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
}
.pop {
  width: 10rem;
  overflow: hidden;
  background-color: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 12;
  display: none;
  z-index: 15;
}
.model-back{
  width: 10rem;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.dialog {
  width: 7.28rem;
  height: 3.33rem;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -3.78rem;
  margin-left: -3.33rem;
  text-align: center;
}
.top {
  width: 100%;
  padding: 0.5rem 0;
  line-height: 0.85rem;
  color: #fff;
  background-color: #FF8702;
  border-radius: 0.4rem 0.4rem 0 0;
  font-size: 0.37rem;
  white-space: pre;
  text-align: center;
}
.bottom {
  width: 100%;
  height: 1.31rem;
  line-height: 1.31rem;
  color: #FF8702;
  background-color: #fff;
  border-radius: 0 0 0.4rem 0.4rem;
  font-size: 0.4rem;
}
