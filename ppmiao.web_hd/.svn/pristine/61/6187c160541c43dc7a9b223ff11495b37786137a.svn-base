		var auth_code = $("input[name='auth_code']").val();  
		var channel = getQueryString('channel');
		var jump_url = jumpUrl();
		
		if(!checkPhone(mobile)) {
			if(mobile == "") {
				$(".phoneError").empty().html('请输入您的手机号码！');
			} else {
