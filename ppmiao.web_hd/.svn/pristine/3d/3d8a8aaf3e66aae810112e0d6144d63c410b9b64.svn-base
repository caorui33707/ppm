/* CSS Document */
body{ font-size:14px; font-family:"微软雅黑",Arial, Helvetica, sans-serif;color:#7f7f7f; margin:0px; padding:0px;background-image:url(about:blank);background-attachment:fixed; background:#ffffff;}
ul li,li{ list-style:none;}
ul,li,dl,dt,dd,span,p,cite,em,i,h1,h2,h3,h4,h5,h6,b{margin:0px; padding:0px;}
h1,h2,h3,h4,h5,h6{ font-weight:normal;}
cite,em,i{ font-style:normal;}
a{color:#7f7f7f; text-decoration:none; outline:none;}
a:hover{ text-decoration:none;}
a:hover,a:active, input, :focus { outline:none;}
input{border: none;}
img{ border:none;}

/*==================question===========================*/
#questionBox{
	background:#f5f5f5;}
#questions ul li{
	background:#fff;
	border-bottom:#dcdcdc 1px solid;
	border-top:#dcdcdc 1px solid;
	margin-top:10px;}
#questions ul li h5{
	font:15px/44px "微软雅黑";
	color:#000000;
	margin-left:18px;
	-webkit-tap-highlight-color:transparent;
	position:relative;
	background:url(../images/arrow01.png) no-repeat scroll center left;
	background-size:18px 18px;
	padding-left:28px;
}
#questions ul li h5 .arrowLeft{
	width:14px;
	height:14px;
	background:url(../images/arrowLeft01.png) no-repeat scroll center left;
	float:left;
	background-size:14px 14px;
	position:absolute;
	top:16px;
	right:10px;}
#questions ul li h5 .arrowUp{
	width:14px;
	height:14px;
	background:url(../images/arrowUp01.png) no-repeat scroll center left;
	float:left;
	background-size:14px 14px;
	position:absolute;
	top:16px;
	right:10px;}
.foldContent{
	border-top:#f5f5f5 1px solid;
	display:none;}
.foldContent p{
	font:12px/18px "微软雅黑";
	color:#999999;
	margin:5px 10px 5px 28px;}
.cardTable{
	margin:5px;}
.cardTable table{
	border-collapse:collapse;
	border-spacing:0;
}
.cardTable table tr td,.cardTable table tr th{
	height:28px;
	border:#cccccc 1px solid;
	text-align:center;}
.cardTable table tr th{
	font-size:12px;
	color:#333;
	font-weight:bold;}
.cardTable table tr td{
	font-size:12px;
	color:#333;
	}	
/*===========================pledge============================*/
.pledgeBox{
	margin:0 20px;}
.pledgeBox h5{
	width:100%;
	font:16px/30px "微软雅黑";
	color:#333333;}
.pledgeBox .txtBox{
	width:100%;
	font:14px/25px "微软雅黑";
	color:#3f3f3f;
	text-indent:2em;}
.pledgeBox .imgBox{
	margin:15px 30px;
	}
.pledgeBox .imgBox img{
	width:100%;}
