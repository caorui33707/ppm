      /*弹框*/
       .integral_content {
        width:70%;
        margin-left:auto;
        margin-right:auto;
        background-color:#ffffff;
        color:#353535;
        border-radius: 12px;
        padding-top:30px;
        padding-bottom:30px;
        }

        .integral_content p {
            font-size: 14px;
            text-align: center;
            line-height: 25px;
        }

        .integral_content span {
            font-size: 14px;
             text-align: center;
        }
        .integral_bj{
             top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #333;
            opacity: 0.3;
            position: fixed;}
        .integral_window{
            left: 0;
            width: 100%;
            height: 100%;
            position: fixed; }
        .integral_window .integral_content{    border-radius: 5px;
            width: 70%;
            margin-left: 15%;
            background-color: #fff;
            height: 220px;
            position: fixed;
            margin-top: 671px;}
        .integral_refer select{width:97%;height:40px;background-color:#fff;border:0;color:#787878;color:#000;font-size:13.5px;}

