@charset "utf-8";
        /* -------------------------摇奖排行榜-----------------------------------  */
        .topRec_List dl, .maquee {
            width: 90%;
            overflow: hidden;
            margin: 0 auto;
            color: #7C7C7C;
        }

        .topRec_List dd {
            float: left;
            text-align: center;
            border-bottom: 1px solid #1B96EE;
        }

        .topRec_List dl dd:nth-child(1) {
            width: 33.33%;
            height: 40px;
            line-height: 40px;
        }

        .topRec_List dl dd:nth-child(2) {
            width: 33.33%;
            height: 40px;
            line-height: 40px;
        }

        .topRec_List dl dd:nth-child(3) {
            width: 33.33%;
            height: 40px;
            line-height: 40px;
        }

        .maquee {
            height: 260px;
        }
        .maquee  li{
            color:#2672dc;
        }

        .topRec_List ul {
            width: 100%;
            height: 370px;
        }
        .topRec_List  {
            width: 100%;
            height: 370px;
        }

        .topRec_List li {
            width: 100%;
            height: 38px;
            line-height: 38px;
            text-align: center;
            font-size: 15px;
        }
            .topRec_List li div {
                float: left;
            }

                .topRec_List li div:nth-child(1) {
                    width: 20%;
                }

                .topRec_List li div:nth-child(2) {
                    width: 40%;
                }

                .topRec_List li div:nth-child(3) {
                    width: 40%;
                }
